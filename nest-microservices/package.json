{
  "scripts": {
    "dev:build": "docker compose --env-file .env.dev -f docker-compose.dev.yml up --build",
    "prod:build": "docker compose --env-file .env.prod -f docker-compose.prod.yml up --build",
    "dev": "docker compose --env-file .env.dev -f docker-compose.dev.yml up",
    "prod": "docker compose --env-file .env.prod -f docker-compose.prod.yml up",

    "dev-down": "docker compose --env-file .env.dev -f docker-compose.dev.yml down",
    "prod-down": "docker compose --env-file .env.prod -f docker-compose.prod.yml down"
  }
}